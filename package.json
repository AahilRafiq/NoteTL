{
  "name": "notetl",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "out/electron/main.js",
  "scripts": {
    "ui:dev": "vite",
    "ui:build": "tsc -b && vite build",
    "electron:build": "tsc -p src/electron/tsconfig.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dist:linux": "npm run ui:build && npm run electron:build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@libsql/client": "^0.15.1",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.15",
    "better-sqlite3": "^11.9.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.483.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.15",
    "tldraw": "^3.11.0",
    "tw-animate-css": "^1.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.notetl.app",
    "productName": "Notetl",
    "files": [
      "out"
    ],
    "extraResources": [
      "out/electron/preload.cjs"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
